spring:
  application:
    name: game-account-shop

  # Database configuration
  datasource:
    url: jdbc:mysql://localhost:3306/gameaccountshop?createDatabaseIfNotExist=true&useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
    username: root
    password: YOUR_MYSQL_PASSWORD  # CHANGE THIS to your MySQL root password
    driver-class-name: com.mysql.cj.jdbc.Driver
    hikari:
      auto-commit: true
      connection-timeout: 30000
      maximum-pool-size: 10
      minimum-idle: 5

  # JPA/Hibernate configuration
  jpa:
    hibernate:
      ddl-auto: validate  # Flyway manages schema
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQLDialect
        format_sql: true
        jdbc:
          batch_size: 25
        order_inserts: true
        order_updates: true

  # Flyway database migrations
  flyway:
    enabled: true
    baseline-on-migrate: true
    locations: classpath:db/migration

  # DevTools
  devtools:
    restart:
      enabled: true

  # Mail configuration
  # HOW TO GET GOOGLE APP PASSWORD:
  # 1. Enable 2-Step Verification in your Google Account (Security > 2-Step Verification).
  # 2. Go to "App passwords" (search in your Google Account settings).
  # 3. Create a new app password (custom name: e.g., "GameShop").
  # 4. Copy the 16-character password generated by Google.
  # 5. Paste it below WITHOUT SPACES (e.g., "abcdefghijklmnop" not "abcd efgh ijkl mnop").
  mail:
    host: smtp.gmail.com
    port: 587
    username: your-email@gmail.com  # CHANGE THIS: Your Gmail address
    password: xxxxxxxxxxxxxxxx      # CHANGE THIS: Your 16-character App Password (NO SPACES)
    properties:
      mail:
        smtp:
          auth: true
          starttls:
            enable: true
        connectiontimeout: 5000
        timeout: 5000
        writetimeout: 5000

  # File upload configuration
  servlet:
    multipart:
      enabled: true
      max-file-size: 32MB
      max-request-size: 32MB

# Server configuration
server:
  port: 8080
  servlet:
    session:
      timeout: 30m

# Application base URL (for email links, etc.)
app:
  base-url: http://localhost:8080

# Logging
logging:
  level:
    com.gameaccountshop: DEBUG
  org.springframework.security: INFO
  pattern:
    console: "%d{yyyy-MM-dd HH:mm:ss} - %msg%n"

# ImgBB Image Upload API
imgbb:
  api-key: YOUR_IMGBB_API_KEY  # Get your free API key from https://api.imgbb.com/

# PayOS Payment Configuration
# HOW TO GET PAYOS CREDENTIALS:
# 1. Visit https://my.payos.vn and sign up/login
# 2. Navigate to "Payment Channels" section
# 3. Create a new payment channel or use existing one
# 4. Copy your credentials (Client ID, API Key, Checksum Key)
# 5. IMPORTANT: In production, use environment variables instead of hardcoding
payos:
  client-id: YOUR_PAYOS_CLIENT_ID      # Your PayOS Client ID from my.payos.vn
  api-key: YOUR_PAYOS_API_KEY          # Your PayOS API Key
  checksum-key: YOUR_PAYOS_CHECKSUM_KEY # Your PayOS Checksum Key (for signature verification)
  base-url: https://api-merchant.payos.vn
